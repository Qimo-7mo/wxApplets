/* 大盒子 */
.shopBox {
    display:flex;
    position: relative;
    border-bottom:1px solid rgb(173, 171, 171);
    padding:20rpx;
}
/* 图片 */

.shopImg {
    width:160rpx;
    height:160rpx;
    margin-right:20rpx;
}
/* 右边详情 */
.shopContent {
    display:flex;
    flex-direction:column;
    line-height:1.5;
    width:520rpx;
}
.shopName {
    font-size:16px;
    width:400rpx;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow:hidden;
}

.shopCon {
    font-size:14px;
    color:#999;
}
/* 评分星星 */
.star {
    color:#ccc;
    position:absolute;
    right:10rpx;
    top:23rpx;
}
.star_after {
    position:absolute;
    left:0;
    top:0;
    color:#f19e38;
    width:90%;
    overflow:hidden;
}
/* 下拉动作 */
.loadFont {
    font-size:16px;

}
/* 下拉到底 */
.shopBottom {
    font-size:16px;
    color:#999;
    text-align:center;
}