<!-- 轮播图分区 -->
<view class="slider">
  <swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="3000" circular="{{true}}">
    <swiper-item wx:for="{{ rotationList }}" wx:key="id">
      <image
        src="{{item.image}}"
        mode="scaleToFill"></image>   
    </swiper-item>
  </swiper>

</view>
<!-- 导航栏分区 -->
<view class="nav">
  <navigator wx:for="{{ navList }}" wx:key="id" url="/pages/shops/shops?shopId={{item.id}}&title={{item.name}}">
    <image src="{{item.icon}}"></image>
    <text>{{item.name}}</text>
  </navigator>
</view>
<!-- 入口分区 -->
<view class="division"></view>
<view class="enter">
 <image src="/assets/images/link-01.png"></image>

  <image src="/assets/images/link-02.png"></image>
</view>