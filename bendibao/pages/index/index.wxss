/* 轮播图 */
.slider image{
  width:100%;
  height:390rpx;

}
/* 导航块 */
.nav {
  display:flex;
  flex-wrap:wrap;
}
.nav > navigator {
  width:33.333%;
  height:200rpx;
  display:flex;
  flex-direction:column;
  /* 垂直 */
  justify-content:center;
  /* 水平 */
  align-items:center;
  /* border:10rpx solid #ddd; */
  box-sizing: border-box;
  border-bottom:1rpx solid #ddd;
  position:relative;

  /* 原始方式 */
  /* border-bottom:10px solid #ddd;
  border-right:10px solid #ddd; */
}
/* .nav > navigator:nth-child(3n){
  border-right:0 none;
} */
/* 方式二 */
.nav > navigator::after {
  content:"";
  width:1rpx;
  height:200rpx;
  background-color: #ddd;
  position:absolute;
  right:0;
  top:0;
}
.nav > navigator:nth-child(3n)::after{
  width:0;
}
.nav navigator image{
  width: 80rpx;
  height:80rpx;
}
.division {
  width:100%;
  height:20rpx;
  background-color: #f1f1f1;
}
/* 入口 */
.enter  {
  display:flex;
  justify-content:space-between;
  align-items:center;
}
.enter image{
  width:320rpx;
  height:178rpx;
  margin:20rpx 40rpx 0;
}